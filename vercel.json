{
  "version": 2,
  "builds": [
    {
      "src": "api/*",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }]
}
